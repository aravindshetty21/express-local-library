extends layout 

block content 
    h1 Author #{author.name} 

    p #{author.get_birth} - #{author.get_death}

    div(style='margin-left:20px;margin-top:20px')
        h4 Books 
        dl 
            each book in author_books 
                dt 
                    a(href=book.url) #{book.title} 
                dd #{book.summary} 
            else 
                p No books available for this author 
